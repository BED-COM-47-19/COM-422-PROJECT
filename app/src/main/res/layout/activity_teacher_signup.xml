<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:rowCount="6"
    android:useDefaultMargins="true"
    android:alignmentMode="alignMargins"
    android:layout_marginTop="90dp"
    android:padding="16dp">

    <!-- First Name Input Field -->
    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_below="@id/editTextFirstName"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:autofillHints="first name"
        android:background="@drawable/edit_text_background"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />
    <!-- Last Name Input Field -->
    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_below="@id/editTextLastName"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:autofillHints="last name"
        android:background="@drawable/edit_text_background"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <!-- Email Input Field -->

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_below="@id/textStudent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/edit_text_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black" /> <!-- Reference to the edit text background drawable -->

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_below="@id/editTextEmail"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:autofillHints="password"
        android:background="@drawable/edit_text_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />  <!-- Reference to the edit text background drawable -->


    <!-- Confirm Password Input Field -->
    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:layout_below="@id/editTextPassword"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:autofillHints="ConfirmPassword"
        android:background="@drawable/edit_text_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_below="@id/buttonLogIn"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="-220dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="60dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/signin_login_round_boutton"
        android:text="CONTINUE" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back" />

</GridLayout>
