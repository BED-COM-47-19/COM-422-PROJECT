<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_image" /> <!-- Replace with your logo drawable -->

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:text="Welcome to the online E-Learning App"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Learn and experience the Malawi School Certificate of Education"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionText"
        android:layout_marginTop="24dp"
        android:text="GET STARTED"
        android:background="@drawable/button_background" /> <!-- Replace with your button drawable -->

</RelativeLayout>
