<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:rowCount="4"
    android:orientation="vertical"
    android:padding="30dp"
    android:alignmentMode="alignMargins"
    android:useDefaultMargins="true">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORM 3 TEACHER"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Item 1 -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sciences_background"
        android:text="SCIENCES" />

    <!-- Item 2 -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/humanities_background"
        android:text="HUMANITIES" />

    <!-- Item 3 -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/languages_background"
        android:text="LANGUAGES" />

</GridLayout>
