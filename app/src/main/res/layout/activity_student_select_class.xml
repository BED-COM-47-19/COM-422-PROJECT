<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:rowCount="5"
    android:alignmentMode="alignMargins"
    android:layout_marginTop="60dp"
    android:padding="16dp">

    <TextView
        android:text="STUDENT'S CLASSES"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />


    <!-- Form 1 Button -->
    <Button
        android:id="@+id/button_form1"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#668C3A"
        android:text="FORM 1"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Form 2 Button -->
    <Button
        android:id="@+id/button_form2"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#23C53E"
        android:text="FORM 2"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Form 3 Button -->
    <Button
        android:id="@+id/button_form3"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#71297E"
        android:text="FORM 3"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Form 4 Button -->
    <Button
        android:id="@+id/button_form4"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#ef5350"
        android:text="FORM 4"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Log Out Button -->
    <Button
        android:id="@+id/log_out_button"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_below="@id/log_out_button"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="-220dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/signin_login_round_boutton"
        android:text="LOG OUT" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="56dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-55dp"
        android:contentDescription="@string/back"
        android:src="@drawable/back_arrow" />


</GridLayout>
