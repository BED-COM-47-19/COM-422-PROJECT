<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="5"
    android:background="@color/white"
    android:alignmentMode="alignMargins"
    android:padding="16dp">

    <TextView
        android:text="CLASSES"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_form1"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#8A122F"
        android:text="FORM 1"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Form 2 Button -->
    <Button
        android:id="@+id/button_form2"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#4408A8"
        android:text="FORM 2"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Form 3 Button -->
    <Button
        android:id="@+id/button_form3"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#389CA8"
        android:text="FORM 3"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Form 4 Button -->
    <Button
        android:id="@+id/button_form4"
        android:layout_width="216dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="#453A2A"
        android:text="FORM 4"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!-- Log Out Button -->
    <Button
        android:id="@+id/log_out_button"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/log_out_button"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="-220dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/signin_login_round_boutton"
        android:text="LOG OUT" />


    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="-55dp"
        android:background="@drawable/back_button_rounderd"
        android:text="BACK"
        android:textColor="@color/white"
        android:textSize="20sp" />



</GridLayout>
