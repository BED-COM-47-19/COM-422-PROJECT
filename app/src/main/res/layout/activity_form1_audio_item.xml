<!-- res/layout/activity_form1_audio_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewAudioTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:text="Audio Title" />

    <TextView
        android:id="@+id/textViewAudioDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingBottom="4dp"
        android:text="Audio Description" />

    <TextView
        android:id="@+id/textViewAudioLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingBottom="4dp"
        android:text="Audio Length" />

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your comment"
        android:padding="8dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonSubmitComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Comment"
        android:padding="8dp"
        android:background="@drawable/button_background" />
</LinearLayout>

