<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="3"
    android:padding="16dp"
    android:background="@color/white"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="SCIENCE SUBJECTS"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Mathematics Button with small corner button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/buttonMathematics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="MATHEMATICS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/purple_200"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_mathematics" />
        <Button
            android:id="@+id/buttonSmallMathematics"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="¡"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_cirlce" />
    </FrameLayout>

    <!-- Biology Button with small corner button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/buttonBiology"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="BIOLOGY"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/biology_button_color"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_biology" />
        <Button
            android:id="@+id/buttonSmallBiology"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="¡"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_cirlce" />
    </FrameLayout>

    <!-- Physics Button with small corner button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/buttonPhysics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:text="PHYSICS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/physics_button_color"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_physics" />
        <Button
            android:id="@+id/buttonSmallPhysics"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="25dp"
            android:text="¡"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_cirlce" />
    </FrameLayout>

    <!-- Chemistry Button with small corner button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/buttonChemistry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="25dp"
            android:text="CHEMISTRY"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/chemistry_button_color"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_chemistry" />
        <Button
            android:id="@+id/buttonSmallChemistry"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="30dp"
            android:text="¡"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_cirlce" />
    </FrameLayout>

    <!-- Agriculture Button with small corner button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/buttonAgriculture"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/agriculture_button_color"
            android:drawableEnd="@drawable/ic_agriculture"
            android:text="AGRICULTURE"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/buttonSmallAgriculture"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="¡"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_cirlce" />
    </FrameLayout>
</GridLayout>
