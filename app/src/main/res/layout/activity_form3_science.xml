<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="3"
    android:padding="16dp"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false">

    <!-- Mathematics Button -->
    <Button
        android:id="@+id/buttonMathematics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="MATHEMATICS"
        android:background="@color/mathematics_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_mathematics" />

    <!-- Biology Button -->
    <Button
        android:id="@+id/buttonBiology"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="BIOLOGY"
        android:background="@color/biology_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_biology" />

    <!-- Physics Button -->
    <Button
        android:id="@+id/buttonPhysics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="PHYSICS"
        android:background="@color/physics_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_physics" />

    <!-- Chemistry Button -->
    <Button
        android:id="@+id/buttonChemistry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="CHEMISTRY"
        android:background="@color/chemistry_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_chemistry" />

    <!-- Agriculture Button -->
    <Button
        android:id="@+id/buttonAgriculture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:text="AGRICULTURE"
        android:background="@color/agriculture_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_agriculture" />

    <!-- Placeholder for even grid -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">
    </FrameLayout>

</GridLayout>
