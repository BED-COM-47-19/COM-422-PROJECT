<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:columnCount="2"
    android:rowCount="3"
    android:padding="16dp"
    android:background="@color/white"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false">

    <!-- Language Subjects Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="LANGUAGE SUBJECTS"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- English Button with small corner button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="440dp">
        <Button
            android:id="@+id/buttonEnglish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ENGLISH"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/english_button_color"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_english" />
        <Button
            android:id="@+id/buttonSmallEnglish"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="ยก"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_cirlce" />
    </FrameLayout>

    <!-- Chichewa Button with small corner button -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="440dp">
        <Button
            android:id="@+id/buttonChichewa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CHICHEWA"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/chichewa_button_color"
            android:textColor="@android:color/white"
            android:drawableEnd="@drawable/ic_chichewa" />
        <Button
            android:id="@+id/buttonSmallChichewa"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="ยก"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_cirlce" />
    </FrameLayout>

    <!-- Optionally add more buttons in similar fashion -->
</GridLayout>
