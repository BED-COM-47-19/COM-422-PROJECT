<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:rowCount="4"
    android:orientation="vertical"
    android:padding="30dp"
    android:alignmentMode="alignMargins"
    android:useDefaultMargins="true">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:text="FORM 1 STUDENT"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Item 1 -->
    <Button
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sciences_background"
        android:text="SCIENCES" />

    <!-- Item 2 -->
    <Button
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/humanities_background"
        android:text="HUMANITIES" />

    <!-- Item 3 -->
    <Button
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/languages_background"
        android:text="LANGUAGES" />

</GridLayout>
