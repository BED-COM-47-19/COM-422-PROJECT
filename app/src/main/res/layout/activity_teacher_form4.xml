<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="SUBJECT CATEGORIES"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Item 1 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/activity_teacher_form4_science"
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/sciences_background"
            android:text="SCIENCES"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Item 2 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/activity_teacher_form4_humanities"
            android:layout_width="264dp"
            android:layout_height="80dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/humanities_background"
            android:text="HUMANITIES"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Item 3 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/activity_teacher_form4_languages"
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/languages_background"
            android:text="LANGUAGES"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="1dp"
        android:text="BACK"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:background="@drawable/back_button_rounderd"
        android:textSize="20dp" />

</LinearLayout>
