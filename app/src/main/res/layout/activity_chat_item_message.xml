<!-- res/layout/activity_chat_item_message.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for user input -->
    <EditText
        android:id="@+id/queryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your query"/>

    <!-- Button to send user input -->
    <Button
        android:id="@+id/sendPromptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"/>

    <!-- ProgressBar to indicate sending progress -->
    <ProgressBar
        android:id="@+id/sendPromptProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- TextView to display model response -->
    <TextView
        android:id="@+id/modelResponseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Model response will appear here"
        android:textSize="16sp"/>
</LinearLayout>
