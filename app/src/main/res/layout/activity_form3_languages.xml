<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151212">

    <TextView
        android:id="@+id/textViewLanguagesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LANGUAGES"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/buttonEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENGLISH"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_below="@id/textViewLanguagesTitle"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:onClick="onEnglishButtonClick"/>

    <Button
        android:id="@+id/buttonChichewa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHICHEWA"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_below="@id/buttonEnglish"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:onClick="onChichewaButtonClick"/>

</RelativeLayout>
