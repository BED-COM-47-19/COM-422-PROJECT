<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151212">

    <TextView
        android:id="@+id/textViewHumanitiesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUMANITIES"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/buttonSocialStudies"
        android:layout_width="126dp"
        android:layout_height="100dp"
        android:layout_below="@id/textViewHumanitiesTitle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background"
        android:text="SOCIAL STUDIES"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonLifeSkills"
        android:layout_width="132dp"
        android:layout_height="104dp"
        android:layout_below="@id/buttonSocialStudies"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="LIFE SKILLS"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="128dp"
        android:layout_height="98dp"
        android:layout_below="@id/buttonLifeSkills"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="HISTORY"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonBibleKnowledge"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_below="@id/buttonHistory"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="BIBLE KNOWLEDGE"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonGeography"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_below="@id/buttonBibleKnowledge"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="GEOGRAPHY"
        android:textColor="#FFFFFF" />

</RelativeLayout>
