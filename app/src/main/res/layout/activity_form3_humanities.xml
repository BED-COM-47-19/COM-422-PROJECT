<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="4"
    android:padding="16dp"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false">

    <!-- Humanity Subjects Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="HUMANITY SUBJECTS"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/buttonSocialStudies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="SOCIAL STUDIES"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@color/social_studies_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_social_studies" />

    <!-- Life Skills Button -->
    <Button
        android:id="@+id/buttonLifeSkills"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="LIFE SKILLS"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@color/life_skills_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_life_skills" />

    <!-- History Button -->
    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="HISTORY"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@color/history_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_history" />

    <!-- Bible Knowledge Button -->
    <Button
        android:id="@+id/buttonBibleKnowledge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="BIBLE KNOWLEDGE"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@color/bible_knowledge_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_bible_knowledge" />

    <!-- Geography Button -->
    <Button
        android:id="@+id/buttonGeography"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="GEOGRAPHY"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="@color/geography_button_color"
        android:textColor="@android:color/white"
        android:drawableEnd="@drawable/ic_geography" />

    <!-- Placeholder for even grid -->

<!--    <ImageButton-->
<!--        android:id="@+id/button_back"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="16dp"-->
<!--        android:contentDescription="@string/back"-->
<!--        android:src="@drawable/ic_back" />-->

</GridLayout>
