<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:columnCount="2"
    android:rowCount="2"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false">

    <!-- PDF Button -->
    <Button
        android:id="@+id/button_pdf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="PDF"
        android:layout_margin="8dp"
        android:backgroundTint="#6e6e6e"/>

    <!-- Audio Button -->
    <Button
        android:id="@+id/button_audio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AUDIO"
        android:layout_margin="8dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="#5a5acb"/>

    <!-- Videos Button -->
    <Button
        android:id="@+id/button_videos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="VIDEOS"
        android:layout_margin="8dp"
        android:backgroundTint="#c855d3"/>

    <!-- Tests and Quizzes Button -->
    <Button
        android:id="@+id/button_tests_quizzes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TESTS AND QUIZZES"
        android:layout_margin="8dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="#4a6d2f"/>
</GridLayout>
